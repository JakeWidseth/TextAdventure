public class Creature
{
    String name;
    String description;
    String defeatMessage;
    
    public Creature()
    {
        name = "Skeleton";
        description = "A boney, undead creature that weilds a sword.";
        defeatMessage = "The skeleton crumbles into a pile of bones...";
    }
    public Creature(String name, String description, String defeatMessage)
    {
        this.name = name;
        this.description = description;
        this.defeatMessage = defeatMessage;
    }
    
}
